<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_app_background" tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/header_activities"
        android:textSize="40dp"/>
    <EditText
        android:id="@+id/new_activity_field"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_text"
        android:layout_centerHorizontal="true"
        android:hint="@string/create_activity_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_activity_field"
        android:background="@color/main_objects_background"
        android:text="@string/add_activity_button"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:background="@color/main_objects_background"
        android:id="@+id/scrollView">
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/main_app_background">

        </ListView>
    </ScrollView>

</RelativeLayout>
